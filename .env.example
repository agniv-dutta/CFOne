# AWS Credentials
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1

# Application Settings
APP_ENV=development
DEBUG=true
SECRET_KEY=GENERATE_SECURE_KEY_HERE  # Generate with: openssl rand -hex 32
JWT_EXPIRATION_HOURS=24

# Database
DATABASE_URL=sqlite:///./data/astracfo.db

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10

# Vector Store
VECTOR_STORE_PATH=./data/vector_store

# API Server
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# AWS Bedrock Models (do not change unless using different models)
# NOVA_MODEL_ID=global.amazon.nova-2-lite-v1:0
# TITAN_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v1
